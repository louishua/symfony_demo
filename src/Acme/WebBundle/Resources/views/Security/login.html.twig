{% extends 'AcmeWebBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@AcmeWebBundle/Resources/public/css/login.css'
    '@AcmeWebBundle/Resources/public/css/common.css'
    output='bundles/AcmeWeb/css/*'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <style>
        html,body{
            height: 100%;
        }
        .login-wrap{
            
        }

    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '@AcmeWebBundle/Resources/public/js/*'
    output='bundles/AcmeWeb/js/main.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block body %}
    <div class="login-wrap container">
        <div class="row">
            <h2 class="text-center text-primary">系统后台登录</h2>

            <div class="col-md-4 center-block" style="float: none">
                <form class="form col-md-12 center-block" action="{{ path('acme_web_security_loginCheck') }}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" id="username" name="_username" placeholder="用户名" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" placeholder="密码" name="_password" value="" />
                </div>
                {% if error %}
                    <div class="form-group text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="checkbox">
                    <label><input type="checkbox" value="remember-me">记住我</label>
                </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
